@using Asp.Net.MVC5_TatilSeyehatSitesi.Models
@model TableList

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<div class="header-banner">
    <div class="wrap">
        <div class="banner">
            <div class="indent">
                <h2 class="indent-left margin-bot">Tatil Seyahat</h2>
                <div class="banner-left">
                    <div class="con-text">
                        <div class="grid1-img">
                            <img src="~/Theme/images/glass.png" alt="">
                        </div>
                        <div class="grid1-desc">
                            <p>Restaurant</p>
                        </div>
                        <div class="clear"></div>
                    </div>
                    <div class="con-text">
                        <div class="grid1-img">
                            <img src="~/Theme/images/flight.png" alt="">
                        </div>
                        <div class="grid1-desc">
                            <p>Uçaklar</p>
                        </div>
                        <div class="clear"></div>
                    </div>
                    <div class="con-text">
                        <div class="grid1-img">
                            <img src="~/Theme/images/group.png" alt="">
                        </div>
                        <div class="grid1-desc">
                            <p>Aktiviteler</p>
                        </div>
                        <div class="clear"></div>
                    </div>
                    <div class="con-text">
                        <div class="grid1-img">
                            <img src="~/Theme/images/key.png" alt="">
                        </div>
                        <div class="grid1-desc">
                            <p>Oteller</p>
                        </div>
                        <div class="clear"></div>
                    </div>
                    <div class="clear"></div>
                </div>
                <div class="header_bottom_right_images">
                    <div style="width: 100%; height:350px;" class="slider">
                        <ul class="rslides" id="slider1">
                            @foreach (var y in Model.Blog.OrderBy(x => Guid.NewGuid()).Take(5))
                            {
                                <li><img style="object-fit: cover; width: 100%; height: 350px;" src="~/image/@y.IMAGE" alt="@y.TITLE"></li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
            <div class="clear"></div>
        </div>
        <div class="clear"></div>
    </div>
</div>
<div class"content">
    <div class="wrap">
        <div class="wrapper">
            <div class="con-top">
                <h3>Hakkımızda</h3>
                @foreach (var x in Model.About)
                {
                    <p>@x.DESCRIPTION.Substring(0, 500)</p> <a href="/Home/About" class="link1">Devamını Okuyun</a>
                }

            </div>

            <div class="grids">
                <div class="box1">
                    <div class="padding">
                        <h4>Son 10 Bloglarım</h4>
                        <ul class="list list-pad">
                            @{int i = 0;}
                            @foreach (var z in Model.Blog.OrderByDescending(x => x.DATE).Take(10))
                            {
                                <li class="list-bg"><a href="/Blog/BlogDetail/@z.ID"><span>@{i++;} @i</span>@(z.TITLE.Length > 40 ? z.TITLE.Substring(0, 35) + "..." : z.TITLE)</a></li>
                            }

                        </ul>
                        <a href="/Blog/Index" class="link1">Bütün Blogları Göster</a>
                    </div>
                    <div class="padding1">
                        <h4>Son Seyahatlerim</h4>
                        <div class="box-left">
                            @foreach (var a in Model.Travel.Take(3))
                            {
                                <a href="/Travel/TravelDetail/@a.ID">
                                    <div class="bot-img">
                                        <img src="~/image/@a.IMAGE" alt="@a.TITLE" />
                                    </div>
                                    <div class="bot-desc">
                                        <p>@a.DESCRIPTION.Substring(0, 100)</p>
                                    </div>
                                    <div class="clear"></div>
                                </a>
                            }
                        </div>
                        <div class="box1-left">
                            @foreach (var b in Model.Travel.Skip(3).Take(3))
                            {
                                <a href="/Travel/TravelDetail/@b.ID">
                                    <div class="bot-img">
                                        <img src="~/image/@b.IMAGE" alt="@b.TITLE" />
                                    </div>
                                    <div class="bot-desc1">
                                        <p>@b.DESCRIPTION.Substring(0, 100)</p>
                                    </div>
                                    <div class="clear"></div>
                                </a>
                            }
                        </div>
                    </div>
                    <div class="clear"></div>
                </div>
            </div>
        </div>
    </div>
</div>

