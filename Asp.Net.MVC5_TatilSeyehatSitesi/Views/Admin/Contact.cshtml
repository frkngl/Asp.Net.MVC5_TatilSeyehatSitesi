@model Asp.Net.MVC5_TatilSeyehatSitesi.Models.TBLCONTACT

@{
    ViewBag.Title = "Contact";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<link rel="stylesheet" href="~/Content/toastr.min.css" />
<script src="~/Scripts/jquery-3.7.1.min.js"></script>
<script src="~/Scripts/toastr.min.js"></script>

<div style="display:flex;flex-direction:column; margin:0 auto;">
    <h2 style="display:flex; justify-content:center;">İletişim Güncelleme</h2>
    <br />
    @using (Html.BeginForm("ContactSave", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <form class="form-group d-flex flex-column ">
            <div style="margin:0px 20px 0px 20px; display: none;">
                @Html.LabelFor(x => x.ID, new { @style = "margin-top:5px; font-size:20px;", required = "required" })
                @Html.TextBoxFor(x => x.ID, new { @class = "form-control", @style = "width:100%; height:30px;", @readonly = "readonly" })
            </div>
            <br />
            <div style="margin:0px 20px 0px 20px;">
                HAKKIMIZDA
                @Html.TextAreaFor(x => x.DESCRIPTION, new { @class = "form-control", @style = "width:100%; height:200px;", required = "required" })
            </div>
            <br />
            <div style="margin:0px 20px 0px 20px;">
                ADRES
                @Html.TextAreaFor(x => x.ADDRESS, new { @class = "form-control", @style = "width:100%; height:200px;", required = "required" })
            </div>
            <br />
            <div style="margin:0px 20px 0px 20px;">
                HARİTA KODU
                @Html.TextAreaFor(x => x.LOCATION, new { @class = "form-control", @style = "width:100%; height:200px;", required = "required" })
            </div>
            <br />
            <div style="margin:0px 20px 0px 20px;">
                TELEFON
                @Html.TextBoxFor(x => x.PHONE, new { @class = "form-control", @style = "width:100%; height:20px;", required = "required" })
            </div>
            <br />
            <div style="margin:0px 20px 0px 20px;">
                TELEFON 2
                @Html.TextBoxFor(x => x.PHONE2, new { @class = "form-control", @style = "width:100%; height:20px;", required = "required" })
            </div>
            <br />
            <div style="margin:0px 20px 0px 20px;">
                FAX
                @Html.TextBoxFor(x => x.FAX, new { @class = "form-control", @style = "width:100%; height:20px;", required = "required" })
            </div>
            <br />
            <div style="margin:0px 20px 0px 20px;">
                FAX 2
                @Html.TextBoxFor(x => x.FAX2, new { @class = "form-control", @style = "width:100%; height:20px;", required = "required" })
            </div>
            <br />
            <div style="margin:0px 20px 0px 20px;">
                MAIL
                @Html.TextBoxFor(x => x.EMAIL, new { @class = "form-control", @style = "width:100%; height:20px;", required = "required" })
            </div>
            <br />
            <div style="margin:0px 20px 0px 20px;">
                MAIL 2
                @Html.TextBoxFor(x => x.EMAIL2, new { @class = "form-control", @style = "width:100%; height:20px;", required = "required" })
            </div>
            <div style="margin:10px 0px 0px 20px;">
                <button class="btn btn-primary" style="width:95%;">Kaydet</button>
            </div>
        </form>
    }
</div>

@if (TempData["success"] != null)
{
    <script>
        toastr["success"]("@TempData["success"]")
        toastr.options = {
            "closeButton": false,
            "debug": false,
            "newestOnTop": false,
            "progressBar": false,
            "positionClass": "toast-top-right",
            "preventDuplicates": false,
            "onclick": null,
            "showDuration": "300",
            "hideDuration": "1000",
            "timeOut": "5000",
            "extendedTimeOut": "1000",
            "showEasing": "swing",
            "hideEasing": "linear",
            "showMethod": "fadeIn",
            "hideMethod": "fadeOut"
        }
    </script>
}

@if (TempData["error"] != null)
{
    <script>
        toastr["error"]("@TempData["error"]")
        toastr.options = {
            "closeButton": false,
            "debug": false,
            "newestOnTop": false,
            "progressBar": false,
            "positionClass": "toast-top-right",
            "preventDuplicates": false,
            "onclick": null,
            "showDuration": "300",
            "hideDuration": "1000",
            "timeOut": "5000",
            "extendedTimeOut": "1000",
            "showEasing": "swing",
            "hideEasing": "linear",
            "showMethod": "fadeIn",
            "hideMethod": "fadeOut"
        }
    </script>
}

